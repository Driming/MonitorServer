<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hc.entity.control.user.UserMapper" >
  <resultMap id="BaseResultMap" type="com.hc.entity.control.user.User" >
    <id column="uid" property="uid" jdbcType="INTEGER" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="phone" property="phone" jdbcType="VARCHAR" />
    <result column="isPass" property="isPass" jdbcType="SMALLINT" />
    <result column="time" property="time" jdbcType="BIGINT" />
  </resultMap>
  <sql id="Base_Column_List" >
    uid, username, password, phone, time, isPass
  </sql>
  
  <select id="loginUser" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from user
    <where>
    	password =  #{password,jdbcType=VARCHAR}
    	and
    	<choose>
    		<when test="username != null">
    			username = #{username,jdbcType=VARCHAR}
    		</when>
    		<otherwise>
    			phone = #{phone,jdbcType=VARCHAR}
    		</otherwise>
    	</choose>
    </where>
  </select>
  
  <select id="selectUserByUsername" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from user
    <where>
    	<if test="uid != null">
    		uid != #{uid,jdbcType=INTEGER} and
    	</if>
    	(username =  #{username,jdbcType=VARCHAR}
		or
		phone = #{phone,jdbcType=VARCHAR})
    </where>
  </select>
  
  <select id="selectUserByUidAndPhone" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from user
    <where>
    	uid = #{uid,jdbcType=INTEGER}
    	and
		phone = #{phone,jdbcType=VARCHAR}
    </where>
  </select>
  
  <select id="selectAll" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from user
    <where>
    	<if test="isPass != null">
    		isPass = #{isPass,jdbcType=SMALLINT}	
    	</if>
    </where>
  </select>
  
  <delete id="deleteUser" parameterType="java.lang.Integer" >
    delete from user
    where uid = #{uid,jdbcType=INTEGER}
  </delete>
  
  <insert id="insertUserSelective" useGeneratedKeys="true" keyProperty="uid" parameterType="com.hc.entity.control.user.User" >
    insert into user
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="uid != null" >
        uid,
      </if>
      <if test="username != null" >
        username,
      </if>
      <if test="password != null" >
        password,
      </if>
      <if test="phone != null" >
        phone,
      </if>
      <if test="time != null" >
        time,
      </if>
      <if test="isPass != null" >
        isPass,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="uid != null" >
        #{uid,jdbcType=INTEGER},
      </if>
      <if test="username != null" >
        #{username,jdbcType=VARCHAR},
      </if>
      <if test="password != null" >
        #{password,jdbcType=VARCHAR},
      </if>
      <if test="phone != null" >
        #{phone,jdbcType=VARCHAR},
      </if>
